{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SAMT App",
  "version": "0.2.7",
  "identifier": "hu.HVCsano.SAMTApp",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "SAMT App Overlay",
        "width": 200,
        "height": 50,
        "resizable": false,
        "create": false,
        "skipTaskbar": true,
        "visible": false,
        "decorations": false,
        "x": 20,
        "y": 20,
        "closable": false,
        "alwaysOnTop": true,
        "label": "overlay",
        "url": "/overlay",
        "transparent": true,
        "maximizable": false
      },
      {
        "title": "SAMT App",
        "width": 300,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "focus": true,
        "url": "/loader",
        "center": true,
        "label": "loader",
        "maximizable": false
      },
      {
        "title": "SAMT App",
        "width": 800,
        "minHeight": 600,
        "minWidth": 800,
        "height": 600,
        "visible": false,
        "label": "main",
        "url": "/main",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [".env"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUzQjc2QjY1MDJGQTg1MUQKUldRZGhmb0NaV3UzVSt5cjZhd1M5OGZaRlVzOGJYd2djTjZkK2pVRG1xYU9DaFBESDFNUmxVdnoK",
      "endpoints": [
        "https://github.com/SCKK-APMS-DEV/SAES/releases/latest/download/latest.json"
      ]
    }
  }
}
